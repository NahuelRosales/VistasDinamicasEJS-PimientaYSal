<!DOCTYPE html>
<html>
  <!-- head  -->

  <%- include('./partials/head') %>
  <body>
    <!-- Navbar (sit on top) -->
    <%- include('./partials/navBar') %>


    <!-- Header -->
    <%- include('./partials/header') %>

    <!-- Page content -->
    <div class="ps-content">

      <!-- Menu Section -->
      <div class="ps-row ps-padding-64" id="menu">
        
        <div class="ps-col l6 ps-padding-large">
          
          <h1 class="ps-center"><%= menu.nombre %></h1>
          <br />
          <h4><%= menu.descripcion %></h4>
          <p class="ps-text-grey">
            <%= menu.precio %>
          </p>
          
        </div>

        <div class="ps-col l6 ps-padding-large ps-img-menu">
          <img
            src="<%= menu.imagen %>"
            class="ps-round ps-image ps-opacity-min"
            alt="<%= menu.imagen %>"
          />
        </div>
        
      </div>

      <!-- Footer -->
    <%- include('./partials/footer') %>
      
    </div>
  </body>
</html>
